
<MudItem xs="1">
    <MudPaper 
        Style="@("aspect-ratio: 1/1;" + $"background-color:{Color}")"
        Elevation="0" 
        Square="true" 
        Outlined="true"
        @onclick="@OnItemClick" 
    />
</MudItem>

@code
{
    [Parameter] public string Index { get; set; }
    [Parameter] public string Color { get; set; }

    public void OnItemClick()
    {
        if(Color == "red")
        {
            Color = "blue";
            return;
        }

        Color = "red";
        return;
    }

}
